<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Vote Your Favorite Star"
            android:textSize="30sp"
            android:textStyle="italic|bold"
            android:textColor="#000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/per1"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="20dp">

                <RelativeLayout
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FBBBBB">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="150sp"
                        android:layout_height="200sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/kaleen" />

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img1"
                        android:layout_margin="10sp"
                        android:text="Kaleen Bhaiya"
                        android:textSize="19sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/noofvote1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn1"
                        android:gravity="center"
                        android:text="No. of Vote = 0"
                        android:textColor="#000000"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/per2"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="30sp"
                android:layout_alignParentEnd="true"
                app:cardCornerRadius="8dp"
                app:cardMaxElevation="20dp">

                <RelativeLayout
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FBBBBB"
                    >

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="150sp"
                        android:layout_height="200sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ganesh" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img2"
                        android:layout_margin="10sp"
                        android:text="Ganesh Gaitonde"
                        android:textSize="19sp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/noofvote2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn2"
                        android:gravity="center"
                        android:text="No of Vote = 0"
                        android:textColor="#000000"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="#000000">

        </View>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Both are Equal"
            android:textColor="#000000"
            android:textSize="30sp"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/finalresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="RESULT"/>
    </LinearLayout>


</ScrollView>